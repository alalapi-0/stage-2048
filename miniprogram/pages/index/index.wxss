/* /miniprogram/pages/index/index.wxss */
/* 说明：简单居中布局与文本样式，针对新增按钮微调间距与宽度。 */

page { background: #faf8ef; }

.wrap {
  min-height: 100vh;               /* 填满屏幕高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;                     /* 略增按钮间距，避免拥挤 */
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #776e65;
}

.meta, .score {
  color: #776e65;
  font-size: 28rpx;
}

.meta { font-weight: 600; }

.btn {
  padding: 10rpx 24rpx;
  border: 1rpx solid #bbb;
  border-radius: 12rpx;
  background: #fff;
  color: #333;
  min-width: 160rpx;               /* 保证按钮足够宽便于触摸 */
  text-align: center;
}

.demo-item {
  display: flex;                    /* 切换区域使用水平布局 */
  align-items: center;              /* 垂直居中开关与文本 */
  gap: 12rpx;                       /* 控制间距 */
}

.demo-switch { transform: scale(0.9); } /* 略微缩小开关，避免占用过多空间 */

.sr-only {
  position: absolute;               /* 绝对定位隐藏 */
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  clip: rect(0, 0, 0, 0);
  overflow: hidden;
  border: 0;
}
